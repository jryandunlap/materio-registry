{
  "$schema": "https://ui.shadcn.com/schema/registry.json",
  "name": "materio",
  "homepage": "https://materio-registry.vercel.app",
  "baseUrl": "https://materio-registry.vercel.app",
  "tailwind": {
    "config": {
      "theme": {
        "extend": {
          "colors": {
            "materio": {
              "primary": "hsl(var(--materio-primary))",
              "secondary": "hsl(var(--materio-secondary))",
              "error": "hsl(var(--materio-error))",
              "affirmative": "hsl(var(--materio-affirmative))",
              "warn": "hsl(var(--materio-warn))",
              "blue": "hsl(var(--materio-blue))",
              "purple": "hsl(var(--materio-purple))"
            }
          },
          "borderRadius": {
            "button": "2px",
            "card": "8px",
            "dialog": "8px"
          }
        }
      }
    }
  },
  "cssVars": {
    "light": {
      "primary": "200 100% 8%",
      "primary-foreground": "0 0% 100%",
      "secondary": "9 70% 66%",
      "secondary-foreground": "0 0% 100%",
      "background": "0 0% 98.4%",
      "foreground": "0 0% 24%",
      "card": "30 20% 98.8%",
      "card-foreground": "0 0% 24%",
      "muted": "40 17% 95%",
      "muted-foreground": "27 4% 50%",
      "destructive": "10 100% 61%",
      "destructive-foreground": "0 0% 100%",
      "border": "33 12% 86%",
      "input": "33 12% 86%",
      "ring": "9 70% 66%",
      "radius": "0.125rem",
      "materio-primary": "200 100% 8%",
      "materio-secondary": "9 70% 66%",
      "materio-error": "10 100% 61%",
      "materio-affirmative": "166 80% 40%",
      "materio-warn": "45 100% 67%",
      "materio-blue": "217 92% 67%",
      "materio-purple": "272 77% 21%",
      "materio-grey": "27 4% 50%",
      "materio-grey-light": "33 12% 86%"
    }
  }
}
